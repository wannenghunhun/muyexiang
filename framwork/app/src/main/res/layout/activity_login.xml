<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/login_img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:src="@drawable/icon_logo" />

    <ImageView
        android:id="@+id/login_img_appdes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_img_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/icon_appdes" />

    <RelativeLayout
        android:id="@+id/login_layout_account"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/login_img_appdes"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:background="@color/gray_F7F7F7"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/login_img_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/icon_account" />

        <com.framwork.common.widget.ClearAbleEditText
            android:id="@+id/login_et_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="5dp"
            android:layout_toRightOf="@+id/login_img_account"
            android:background="@null"
            android:hint="请输入您的账号"
            android:textColor="@color/black_FF222222"
            android:textColorHint="@color/gray_C6C8C8"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_layout_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/login_layout_account"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="@color/gray_F7F7F7"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/login_img_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/icon_password" />

        <com.framwork.common.widget.ClearAbleEditText
            android:id="@+id/login_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="5dp"
            android:layout_toRightOf="@+id/login_img_password"
            android:background="@null"
            android:hint="请输入您的密码"
            android:textColor="@color/black_FF222222"
            android:textColorHint="@color/gray_C6C8C8"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/login_tv_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/login_layout_password"
        android:layout_margin="24dp"
        android:background="@drawable/button_cornor"
        android:gravity="center"
        android:text="登录系统"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/login_tv_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:text="应用设置"
        android:textColor="@color/gray_666666"
        android:textSize="13sp" />
</RelativeLayout>