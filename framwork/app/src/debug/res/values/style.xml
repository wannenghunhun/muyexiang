<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="commonTabLayout" parent="android:Widget">
        <item name="android:background">@android:color/white</item>
        <item name="tabBackground">@android:color/white</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorColor">@android:color/holo_red_dark</item>
        <item name="tabTextAppearance">@style/TabLayoutTextSizeStyle</item>
        <item name="tabSelectedTextColor">#C9A861</item>
        <item name="tabTextColor">#727272</item>
        <item name="tabMode">fixed</item>

    </style>

    <style name="TabLayoutTextSizeStyle">
        <item name="android:textSize">16sp</item>
    </style>

</resources>